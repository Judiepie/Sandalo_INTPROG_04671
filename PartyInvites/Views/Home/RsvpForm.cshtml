@model PartyInvites;
@{
    Layout = null;
}

<!Doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Rsvp Form</title>
    </head>
    <body>
        <div>
            RSVP Form
        </div>
        <form asp-action="RsvpForm" method="post">
            <div>
                <label asp-for="Name">Your Name: </label>
                <input type="text" asp-for="Name"/>
            </div>
        <div>
            <label asp-for="Email">Email Address: </label>
            <input type="email" asp-for="Email" />
        </div>
        <div>
            <label asp-for="Phone">Phone/Cell Number: </label>
            <input type="number" asp-for="Phone" />
        </div>
        <div>
            <label asp-for="WillAttend">Will Attend???: </label>
            <select asp-for="WillAttend">
                <option value="">Choose a Selection</option>
                <option value="True">Yes, I will attend the party.</option>
                <option value="False">No, I will not attend the party.</option>
            </select>
        </div>
        </form>
    </body>
</html>